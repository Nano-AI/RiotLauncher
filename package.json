{
  "name": "riotlauncher",
  "description": "An unofficial launcher for Riot Games.",
  "version": "0.1.0",
  "author": "Nano-AI",
  "private": true,
  "build": {
    "appId": "com.nanoai.riotlauncher",
    "productName": "Riot Launcher",
    "files": [
      "dist/**/*",
      "build/**/*",
      "public/electron.js"
    ],
    "extends": null
  },
  "main": "public/electron.js",
  "homepage": "./",
  "dependencies": {
    "@material-ui/core": "^4.11.3",
    "bootstrap": "^4.6.0",
    "react": "^17.0.2",
    "react-bootstrap": "^1.5.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "request": "^2.88.2",
    "simplebar-react": "^2.3.0"
  },
  "scripts": {
    "react-start": "react-scripts start && npm run electron-dev",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "electron-run": "nodemon --watch public --exec \"electron .\"",
    "build": "npm run react-build && npm run electron-build",
    "start": "concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000/ && npm run electron-run\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/braces": "^3.0.0",
    "@types/color-convert": "^2.0.0",
    "@types/glob-base": "^0.3.0",
    "@types/hast": "^2.3.1",
    "@types/is-function": "^1.0.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.7",
    "concurrently": "^6.0.1",
    "cross-env": "^7.0.3",
    "electron": "^12.0.2",
    "electron-builder": "^22.10.5",
    "nodemon": "^2.0.7",
    "sass": "^1.32.8",
    "typescript": "^4.1.2",
    "wait-on": "^5.3.0",
    "watch": "^1.0.2",
    "web-vitals": "^1.0.1"
  }
}
